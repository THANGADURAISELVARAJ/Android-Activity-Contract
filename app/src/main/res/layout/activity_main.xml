<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/btn_get_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get photo" />

    <Button
        android:id="@+id/btn_get_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get video" />

    <Button
        android:id="@+id/btn_capture_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="capture photo" />

    <Button
        android:id="@+id/btn_request_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="request single permission (Camera)" />

    <Button
        android:id="@+id/btn_request_multiple_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="request multiple permission" />

    <Button
        android:id="@+id/btn_launch_activity_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launch activity result" />

</androidx.appcompat.widget.LinearLayoutCompat>